// Create an instance of the GyverOLED class for SSH1106 128x64 OLED display
GyverOLED<SSH1106_128x64> oled;

// Define MPU6050 I2C address
const int MPU = 0x68;

// Variables for accelerometer data
int16_t accelerometer_x, accelerometer_y, accelerometer_z;
float accel_x_g, accel_y_g, accel_z_g;
float accel_total_g;
int steps = 0;

// Create an instance of the MLX90614 temperature sensor
Adafruit_MLX90614 mlx;

void setup() {
  // Initialize OLED display
  oled.init();
  oled.clear();
  
  // Display empty bitmap
  oled.drawBitmap(0, 0, bitmap_empty, 128, 64);
  oled.update();
  delay(1000);

  // Display 128x64 bitmap
  oled.drawBitmap(0, 14, bitmap_128x64, 128, 64);
  oled.update();
  delay(3000);

  // Clear display and show empty bitmap again
  oled.clear();
  oled.drawBitmap(0, 0, bitmap_empty, 128, 64);
  oled.update();
  delay(200);

  // Initialize I2C communication
  Wire.begin();

  // Wake up MPU6050 from sleep mode
  Wire.beginTransmission(MPU);
  Wire.write(0x6B);
  Wire.write(0);
  Wire.endTransmission(true);

  // Initialize MLX90614 temperature sensor
  if (!mlx.begin()) {
    Serial.println("Error connecting to MLX sensor. Check wiring.");
    while (1);
  };

  // Initialize serial communication
  Serial.begin(9600);
}

void loop() {
  Serial.println("=================================");
  Serial.println("Initialized");

  // Read object temperature from MLX90614
  float objectTemp = mlx.readObjectTempC();

  // Read accelerometer data from MPU6050
  Wire.beginTransmission(MPU);
  Wire.write(0x3B);  // Starting register for accelerometer readings
  Wire.endTransmission(false);
  Wire.requestFrom(MPU, 6, true);

  // Combine high and low bytes for each axis
  accelerometer_x = Wire.read() << 8 | Wire.read();
  accelerometer_y = Wire.read() << 8 | Wire.read();
  accelerometer_z = Wire.read() << 8 | Wire.read();

  // Convert raw accelerometer data to 'g' values
  accel_x_g = accelerometer_x / 16384.0;
  accel_y_g = accelerometer_y / 16384.0;
  accel_z_g = accelerometer_z / 16384.0;

  // Calculate total acceleration (magnitude of the 3D vector)
  accel_total_g = sqrt(pow(accel_x_g, 2) + pow(accel_y_g, 2) + pow(accel_z_g, 2));

  // Detect steps based on the acceleration magnitude
  if (accel_total_g > 1.1) {
    steps++;
    Serial.print("Steps: ");
    Serial.println(steps * 2);
  }
  Serial.print("Temperature: ");
  Serial.println(objectTemp);
  // Clear the OLED screen and display empty bitmap
  oled.clear();
  oled.drawBitmap(0, 0, bitmap_empty, 128, 64);
  oled.update();
  delay(200);

  // Display information on OLED
  oled.setScale(1);
  
  // Display step count
  oled.setCursor(0, 0);
  oled.print("Steps: ");
  oled.print(steps * 2);
  
  // Display temperature
  oled.setCursor(0, 2);
  oled.print("Temperature: "); 
  oled.print(objectTemp);
  oled.print(" C");
  
  // Display estimated calories burned
  oled.setCursor(0, 4);
  oled.print("Calories: "); 
  oled.print((float)steps * 0.1387);
  oled.print(" Kcal");
  
  // Refresh the OLED display
  oled.update();
  delay(1500);
}